# Backend environment configuration
# Copy this file to .env and fill in your values

# Server
PORT=4000
NODE_ENV=development

# Database (future: PostgreSQL + Prisma)
# DATABASE_URL=postgresql://user:pass@localhost:5432/marketplace_db

# JWT Secret (auto-generated on first run, but you can override)
# JWT_SECRET=your-secret-key-here

# Stripe (optional: for payment processing)
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_PUBLISHABLE_KEY=pk_test_XXXXXXXXXXXXXXXXXXXXXXXX
STRIPE_WEBHOOK_SECRET=whsec_XXXXXXXXXXXXXXXXXXXXXXXX
STRIPE_CLIENT_ID=ca_XXXXXXXXXXXXXXXXXXXXXXXX

# Admin credentials (for initial setup)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=changeme123

# CORS and security
CORS_ORIGIN=http://localhost:4000

# Logging
LOG_LEVEL=info

# Platform fee (percentage of order total)
PLATFORM_FEE_PERCENT=10
